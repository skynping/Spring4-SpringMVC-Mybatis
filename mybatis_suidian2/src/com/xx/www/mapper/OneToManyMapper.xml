<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xx.www.mapper.OneToManyMapper">
	<!-- 一堆多映射 -->
	<resultMap type="Customer" id="CustoemrMap">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="age" property="age"/>
		<!-- 集合类型
			ofType：集合中包含的属性
		 -->
		<collection property="listOrders" ofType="Orders">
			<id column="oid" property="id"/>
			<result column="content" property="content"/>
		</collection>
	</resultMap>
	
	<select id="findOrderById" parameterType="int" resultMap="CustoemrMap">
		 select c.*,o.content,o.id oid
		 from customer c 
		 inner join orders o 
		 on c.id = o.customer_id 
		 having c.id = #{id};
	</select>
</mapper>
